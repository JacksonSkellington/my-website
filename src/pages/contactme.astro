---
import BaseLayout from '../layouts/BaseLayout.astro'
import Logo from '../assets/Logo.svg'

const pageTitle = 'Contact Me';
const logoUrl = `url(${Logo.src})`;
---

<BaseLayout pageTitle={pageTitle}>
  
  <section class="contact-me">
    <div class="glass-container__bg">
      <div class="glass-container__form">
        <form
          action="https://formspree.io/f/mbldwnow"
          method="POST"
          class="contact-form"
        >
          <input type="text" name="_honeypot" style="display: none;" >
          <div class="form-group">
            <label>
              Your email:
              <input type="email" name="email" required>
            </label>
          </div>
          <div class="form-group">
            <label>
              Your message:
              <textarea name="message" required></textarea>
            </label>
          </div>
          <button type="submit">Send</button>
        </form>
      </div>
    </div>
  </section>
  
  <style define:vars={{logoUrl}}>

    .glass-container__bg {
      min-height: 520px;
      min-width: 350px;
      background-image: var(--logoUrl);
      background-size: contain;
      background-repeat: no-repeat;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .glass-container__form {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 40px;
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      width: 90%;
      max-width: 600px;
    }
    
    .contact-me {
      display:flex;
      justify-content: center;
      align-items: center;
      
      flex-grow: 1;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    h2 {
        color: #ffffff;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    label {
        color: #ffffff;
        font-weight: 500;
    }

    input:focus, textarea:focus {
        outline: none;
        background: rgba(255, 255, 255, 1);
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    }

    input, textarea {
        padding: 12px;
        border: none;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.9);
        transition: all 0.3s ease;
        font-size: 16px;
    }

    textarea {
        resize: vertical;
        min-height: 100px;
    }

    button {
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.9);
        color: #333;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

    button:hover {
        background: rgba(255, 255, 255, 1);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
  </style>
  
</BaseLayout>
